{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/authorization.css') }}">
{% endblock %}

{% block body %}
    <div class="title reg">ВХОД ДЛЯ ЗАРЕГИСТРИРОВАННОГО ПОЛЬЗОВАТЕЛЯ</div>
    <div class="content">
        <div class="main_form">
            <div class="fields">
                {% if error is not null %}
                    <p>Неверные данные авторизации</p>
                {% endif %}
                <form name="regis" action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    {% endif %}
                    <div class="form-group">
                        <input type="email" class="form-control" name="_username" placeholder="Введите e-mail">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="_password" placeholder="Введите пароль">
                    </div>
                    <button type="submit" class="btn-enter">Вход</button>
                    <div>
                        <a href="{{ path('fos_user_resetting_request') }}">Забыли пароль?</a>
                    </div>
                    {% include 'public/security/social_auth_buttons.html.twig' %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
