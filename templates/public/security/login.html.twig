{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('static/authorization.css') }}">
{% endblock %}

{% block body %}
    <div>
        <div class="ccont row">
            <div class="col-md-4"></div>
            <div class="main_form col-md-4">
                <h1 class="title">Вход</h1>
                <div class="fields">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        {% endif %}

                        <div class="form-group">
                            <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="Введите e-mail">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Введите пароль">
                        </div>
                        <div class="form-group">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                            <label for="remember_me">Запомнить меня</label>
                        </div>

                        <input type="submit" class="btn" value="Вход"/>
                    </form>
                    <div>
                        <a href="{{ path('fos_user_resetting_request') }}">Забыли пароль?</a>
                    </div>
                    <!--кнопки соц.сетей-->
                    <h2>или через социальные сети</h2>
                    <div class="btn-socseti">

                        <a href="#" class="btn btn-vk" title="ВКонтакте">
                            <i class="fab fa-vk"></i>
                        </a>
                        <a href="#" class="btn btn-od" title="Одноклассники">
                            <i class="fab fa-odnoklassniki"></i>
                        </a>
                        <a href="#" class="btn btn-fb" title="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="{{ path('google_connect') }}" class="btn btn-gg" title="Google">
                            <i class="fab fa-google"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
{% endblock %}
