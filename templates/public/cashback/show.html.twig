    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/page_shop.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/page_shop.js') }}"></script>
