                                                </div>
                                            </div>
                                            <div class="date">
                                                <script>document.write(new Date().toLocaleDateString('ru'));</script>
                                            </div>
                                        </div>
                                        <div class="panel-what">
                                            <textarea class="sm_textarea" rows="2" cols="85" placeholder="Оставьте свой комментарий..."></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="button_en">
                                <button type="submit" class="btn-send">Отправить</button>
                            </div>
                        {% endif %}
                        <!--2-->
                        <div class="panel-body">
                            <div class="panel-who">
                                <div class="avatar">
                                    <div class="up">
                                        <div class="ava"><img src="{{ asset('img/anonym.png') }}"></div>
                                        <div class="fiostar">
                                            <div class="fio">Ярослав Жуков</div>
