{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/catalog.css') }}">
{% endblock %}

{% block body %}
    <div class="content">
        <div class="filling">
            <div class="onecol">
                <div class="list">
                    <div class="cell"><a href="avto">АВТО</a></div>
                    <div class="cell"><a href="cottage">ДЛЯ ДОМА И ДАЧИ</a></div>
                    <div class="cell"><a href="eat">ДОСТАВКА ЕДЫ</a></div>
                    <div class="cell"><a href="zoo">ЗООТОВАРЫ</a></div>
                    <div class="cell"><a href="books">КНИГИ</a></div>
                    <div class="cell"><a href="health">КРАСОТА И ЗДОРОВЬЕ</a></div>
                    <div class="cell"><a href="furnit">МЕБЕЛЬ</a></div>
                    <div class="cell"><a href="clothes">ОДЕЖДА И ОБУВЬ</a></div>
                    <div class="cell"><a href="show">РАЗВЛЕЧЕНИЯ И ДОСУГ</a></div>
                    <div class="cell"><a href="flowers">ПОДАРКИ И ЦВЕТЫ</a></div>
                    <div class="cell"><a href="sport">СПОРТ</a></div>
                    <div class="cell"><a href="kids">ТОВАРЫ ДЛЯ ДЕТЕЙ</a></div>
                    <div class="cell"><a href="house">ТОВАРЫ ДЛЯ ДОМА</a></div>
                    <div class="cell"><a href="creation">ТОВАРЫ ДЛЯ ТВОРЧЕСТВА</a></div>
                    <div class="cell"><a href="china">ТОВАРЫ ИЗ КИТАЯ</a></div>
                    <div class="cell"><a href="travel">ТУРИЗМ И ПУТЕШЕСТВИЯ</a></div>
                    <div class="cell"><a href="tech">ЦИФРОВАЯ И <br>БЫТОВАЯ ТЕХНИКА</a></div>
                </div>
            </div>
            <div class="twocol">
                <div class="find">
                    <input type="text" class="form-control" id="find" placeholder="Искать по названию">
                </div>
                <div class="shops">
                    {% for cashback in cashbacks %}
                        <div class="square">
                            <div class="shop-window">
                                <div class="item">
                                    <a href="{{ path('cashback_page', {'slug': cashback.slug}) }}">
                                        <div class="logo blok1">
                                            <img src="{{ cashback.cashbackImage }}" alt="gulliver-cashback"
                                                 itemprop="image">
                                        </div>
                                    </a>
                                    <div class="cash_proc blok2">
                                        <span class="word_cash">кэшбэк</span>
                                        <span class="do">до</span>
                                        <span class="cifra">{{ cashback.cash }}</span>
                                    </div>
                                    <div class="or_but blok3">
                                        <a href="{{ path('cashback_tracking', {'id': cashback.id}) }}" class="btn button_t">Перейти в магазин</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div id="to-top">
        <i class="fas fa-caret-square-up fa-4x"></i>
    </div>
{% endblock %}
